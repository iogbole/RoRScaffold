

<h2>Listing Jedis</h2>


 <div class="datagrid">
<table align ="center">
<thead>
<tr>
<th>First Name</th>
<th>Last Name</th>
<th>Gender</th>
<th>Address</th>
<th>Picture</th>
<th colspan="3">Action</th>
</tr>
</thead>


  <tbody>
    <% @jedis.each do |jedi| %>
      <tr class="<%= cycle('', 'alt') -%>" >
        <td><%= jedi.first_name %></td>
        <td><%= jedi.last_name %></td>
        <td><%= jedi.sex %></td>
        <td><%= jedi.location %></td>
        <td> <%= image_tag(jedi.picture_url, :width => 50) if jedi.picture.present? %></td>
       
        <td><%= link_to 'Show', jedi %> | </td>
        <td><%= link_to 'Edit', edit_jedi_path(jedi) %> | </td>
        <td><%= link_to 'Destroy', jedi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Click Here to Create New Jedi', new_jedi_path %>

</div>




